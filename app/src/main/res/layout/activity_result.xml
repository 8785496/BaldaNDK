<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.hol.chernyshov.balda.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 : 0"
        android:id="@+id/txtScore"
        android:layout_marginTop="24dp"
        android:singleLine="true"
        android:layout_below="@+id/txtPlayers"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player : Android"
        android:id="@+id/txtPlayers"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_save_record_anonymously"
        android:id="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:onClick="registrationAnonymous"
        android:layout_below="@+id/txtScore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_registration"
        android:id="@+id/button6"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="register"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_login"
        android:id="@+id/button7"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:onClick="login"/>
</RelativeLayout>
